<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frameContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:orientation="vertical">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="20"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:padding="4dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/action_play_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:background="@color/success"
                android:src="@drawable/ic_play_sound"
                />
            <ImageButton
                android:id="@+id/action_stop_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ic_stop_sound"
                />
            <ImageButton
                android:id="@+id/action_import_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp"
                android:background="@color/info"
                android:src="@drawable/ic_upload"
                />

            <ImageButton
                android:id="@+id/action_search_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@color/warning"
                android:src="@drawable/ic_search"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:gravity="bottom"
            android:orientation="vertical" >
            <Button
                android:id="@+id/action_voice_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/danger"
                android:text="@string/action_voice_disconnect"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
